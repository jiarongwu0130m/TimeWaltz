@model WebApplication1.Models.PersonalRecordViewModels.ClockViewModel

@{
    ViewBag.Title = "打卡資訊";
}

<div id="app">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                <div class="card card-light">
                    <div class="card-header">
                        <h3 class="card-title">打卡時間</h3>
                    </div>
                    <div class="card-body">
                        <div class="row form-group">
                            <label class="col-form-label col-md-auto">上班時間</label>
                            <input v-model="startClockInDate" type="text" class="form-control col-md-5" id="startTime" readonly>
                        </div>
                        <div class="row form-group">
                            <label class="col-form-label col-md-auto">打卡地點</label>
                            <label class="col-form-label col-md-auto">經度：</label>
                            <input v-model="startClockInLongitude" type="text" class="form-control col-md-2" id="StartAddLng" readonly>
                            <label class="col-form-label col-md-auto">緯度：</label>
                            <input v-model="startClockInLatitude" type="text" class="form-control col-md-2" id="StartAddLat" readonly>
                        </div>
                        <hr>
                        <div class="row form-group">
                            <label class="col-form-label col-md-auto">下班時間</label>
                            <input v-model="endClockInDate" type="text" class="form-control col-md-5" id="endTime" readonly>
                        </div>
                        <div class="row form-group">
                            <label class="col-form-label col-md-auto">打卡地點</label>
                            <label class="col-form-label col-md-auto">經度：</label>
                            <input v-model="endClockInLongitude" type="text" class="form-control col-md-2" id="EndAddLng" readonly>
                            <label class="col-form-label col-md-auto">緯度：</label>
                            <input v-model="endClockInLatitude" type="text" class="form-control col-md-2" id="EndAddLat" readonly>
                        </div>
                    </div>
                    <div class="card-footer">
                        <input type="button" class="btn btn-danger" value="上班打卡" @@click="setOn">
                        <input type="button" class="btn btn-primary" value="下班打卡" @@click="setOff">
                        <input type="hidden" asp-for="Status" id="statusHidden">
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-4">
            <div class="card card-light">
                <div class="card-header">
                    <h3 class="card-title">當日班表</h3>
                </div>
                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-form-label col-sm-3">上班時間</label>
                        <input v-model="shiftScheduleStartTime" type="text" class="col-sm-9" readonly>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-sm-3">下班時間</label>
                        <input v-model="shiftScheduleEndTime" type=" text" class="col-sm-9" readonly>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="successModalLabel">打卡成功</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                    {
                        <p>@ViewBag.SuccessMessage</p>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">確認</button>
                </div>
            </div>
        </div>
    </div>
</div>






@section Scripts {
    <script>
        const app = Vue.createApp({
            data() {
                return {
                    startClockInDate: "",
                    startClockInLongitude: "",
                    startClockInLatitude: "",
                    endClockInDate: "",
                    endClockInLongitude: "",
                    endClockInLatitude: "",
                    shiftScheduleStartTime: "",
                    shiftScheduleEndTime: "",
                    currentLatitude: "1",
                    currentLongitude: "2"

                }
            },
            methods: {
                getLocation(fn) {
                    let self = this;
                    if (navigator.geolocation) {
                        navigator.geolocation.getCurrentPosition(
                            function (position) {
                                self.currentLongitude = position.coords.longitude;
                                self.currentLatitude = position.coords.latitude;
                                if (typeof fn == "function") {
                                    fn();
                                }
                            },
                            function (error) {
                                alert("無法取得位置");
                            }
                        );
                    } else {
                        alert("無法取得位置");
                    }
                },
                setOn() {
                    this.getLocation(() => {
                        let self = this;
                        axios.post("/api/clockapi/on", {
                            latitude: self.currentLatitude,
                            longitude: self.currentLongitude
                        }).then(response => {
                            if (response.data == true) {
                                alert("打卡成功");
                            } else {
                                alert("打卡失敗，請聯絡大大");
                            }
                        })                    
                    });             
                },
                setOff() {
                    this.getLocation(() => {
                        let self = this;
                        axios.post("/api/clockapi/off", {
                            latitude: self.currentLatitude,
                            longitude: self.currentLongitude
                        }).then(response => {
                            if (response.data == true) {
                                alert("打卡成功");
                            } else {
                                alert("打卡失敗，請聯絡大大");
                            }
                        })
                    });
                },
                getClockInfo() {
                    let self = this;
                    axios("/api/clockapi/info").then(response => {
                        console.log(response);
                    })
                }
            },
            mounted() {
                this.getClockInfo();
                this.getLocation();
            }
        }).mount("#app");
    </script>








    <script>
        var longitude;
        var latitude;
        var status;
        var startClock = document.getElementById('startClockIn');
        var endClock = document.getElementById('endClockIn');

        var startTime = document.getElementById('startTime');
        var endTime = document.getElementById('endTime');
        var options = {
            weekday: 'long',
            year: 'numeric',
            month: 'long',
            day: 'numeric',
            hour: 'numeric',
            minute: 'numeric',
            second: 'numeric'
        };

        function getLocation() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(
                    function (position) {
                        longitude = position.coords.longitude;
                        latitude = position.coords.latitude;
                    },
                    function (error) {
                        alert("無法取得位置");
                    }
                );
            } else {
                alert("無法取得位置");
            }
        }
        window.onload = getLocation;

        function setStatus(value) {
            document.getElementById('statusHidden').value = value;
        }

        startClock.addEventListener('click', (e) => {
            e.preventDefault();
            startTime.value = new Date().toLocaleString('zh-TW', options);
            updateLocation('StartAddLng', 'StartAddLat');
            document.getElementById('StartAddLng').value = longitude;
            document.getElementById('StartAddLat').value = latitude;
            showSuccessAlert();
            document.forms[0].submit();
        });

        endClock.addEventListener('click', (e) => {
            e.preventDefault();
            endTime.value = new Date().toLocaleString('zh-TW', options);
            updateLocation('EndAddLng', 'EndAddLat');
            document.getElementById('EndAddLng').value = longitude;
            document.getElementById('EndAddLat').value = latitude;
            showSuccessAlert();
            document.forms[0].submit();
        });

        function updateLocation(lng, lat) {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(
                    function (position) {
                        latitude = position.coords.latitude;
                        longitude = position.coords.longitude;
                    },
                    function (error) {
                        alert("無法取得位置");
                    }
                );
            } else {
                alert("無法取得位置");
            }
        }
        function showSuccessAlert() {
            $('#successModal').modal('show');
        }
    </script>
}