@{
    Layout = null;
}
<!doctype html>
<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, viewport-fit=cover" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="theme-color" content="#000000">
    <title>TimeWaltz</title>
    <link rel="icon" type="image/png" href="/img/logo_circle.png" sizes="32x32">


    <link rel="apple-touch-icon" sizes="180x180" href="/mobile/assets/img/icon/192x192.png">
    <link rel="stylesheet" href="/mobile/assets/css/style.css">
    <link rel="manifest" href="/mobile/__manifest.json">
</head>

<body class="bg-white">
    <div id="loader">
        <div class="spinner-border text-primary" role="status"></div>
    </div>
    <div id="appCapsule" class="pt-0">

        <div class="login-form mt-1">
            <div class="section">

                <img src="/img/logo_tra.png" alt="TimeWaltz" class="form-image" />
            </div>
            <div class="section mt-1">
                <h1>TimeWaltz</h1>
            </div>
            <div class="section mt-1 mb-5">
                <form action="/employee/account/login" method="post">
                    <div class="form-group boxed">
                        <div class="input-wrapper">
                            <input type="text" class="form-control" name="account" id="email1" placeholder="請輸入帳號">
                            <i class="clear-input">
                                <ion-icon name="close-circle"></ion-icon>
                            </i>
                        </div>
                    </div>

                    <div class="form-group boxed">
                        <div class="input-wrapper">
                            <input type="password" class="form-control" name="password" id="password1" placeholder="請輸入密碼">
                            <i class="clear-input">
                                <ion-icon name="close-circle"></ion-icon>
                            </i>
                        </div>
                    </div>
                    <div class="form-group mt-5">
                        <button type="submit" class="btn btn-primary btn-block btn-lg">Log in</button>
                    </div>
                    @{
                        if (!string.IsNullOrEmpty(ViewBag.Error))
                        {
                            <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
                        }
                    }
                </form>
            </div>
        </div>
    </div>
    <script src="/mobile/assets/js/lib/jquery-3.4.1.min.js"></script>
    <script src="/mobile/assets/js/lib/popper.min.js"></script>
    <script src="/mobile/assets/js/lib/bootstrap.min.js"></script>
    <script type="module" src="https://unpkg.com/ionicons@5.0.0/dist/ionicons/ionicons.js"></script>
    <script src="/mobile/assets/js/plugins/owl-carousel/owl.carousel.min.js"></script>
    <script src="/mobile/assets/js/plugins/jquery-circle-progress/circle-progress.min.js"></script>
    <script src="/mobile/assets/js/base.js"></script>

</body>

</html>
