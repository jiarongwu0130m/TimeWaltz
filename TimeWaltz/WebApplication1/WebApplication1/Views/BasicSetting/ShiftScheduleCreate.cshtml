@model WebApplication1.Models.BasicSettingViewModels.ShiftSchedulesCreateViewModel
@{
    ViewData["Title"] = "新增班別設定";
}


<div class="row">
    <div class="col-12">
        <div class="card">
            <form asp-action="ShiftScheduleCreate" asp-asp-controller="BasicSetting" method="post">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ShiftName" class="control-label"></label>
                        <input asp-for="ShiftName" class="form-control col-3" />
                        <span asp-validation-for="ShiftName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartTime" class="control-label"></label>
                        <input type="time" name="StartTime" value="@DateTime.Now.ToString("09:00 A")" class="form-control col-3" />
                        <span asp-validation-for="StartTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EndTime" class="control-label"></label>
                        <input type="time" name="EndTime" value="@DateTime.Now.ToString("06:00 P")" class="form-control col-3" />
                        <span asp-validation-for="EndTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaxAdditionalClockIn" class="control-label"></label>
                        <input asp-for="MaxAdditionalClockIn" type="number" class="form-control col-3" />
                        <span asp-validation-for="MaxAdditionalClockIn" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <input type="submit" value="送出" class="btn btn-primary" />
                    <a asp-controller="BasicSetting" asp-action="ShiftSchedule" class="btn btn-outline-dark">返回</a>
                </div>
            </form>
            
            
        </div>
    </div>
</div>

