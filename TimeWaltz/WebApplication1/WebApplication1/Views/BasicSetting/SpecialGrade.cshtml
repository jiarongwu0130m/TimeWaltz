@{
    Layout = "_Layout";
    ViewData["Title"] = "年資級距一覽";
}

<div class="row" id="app">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <div class="row">
                        <div class="col=auto ml-auto">
                            <a asp-controller="BasicSetting" asp-action="SpecialGradeCreate" class="btn btn-outline-success pull-right">新增</a>
                        </div>
                    </div>
                </h3>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap text-center">
                    <thead>
                        <tr>
                            <th>
                                服務年資
                            </th>
                            <th>
                                特休天數
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr v-for="item in specialGradeListData">
                            <td>
                                {{item.serviceLength}}
                            </td>
                            <td>
                                {{item.days}}
                            </td>
                            <td>
                                <a href="#" @@click="edit(item.id, $event)" class="btn btn-outline-primary">編輯</a>
                                <a href="#" @@click="checkIsDelete(item.id, $event)" class="btn btn-outline-secondary">刪除</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 
@section Scripts{
    <script>
        Vue.createApp({
            data() {
                return {
                    specialGradeListData: [],
                    serviceLength: null,
                    days: null,
                    id: null,
                }
            },
            methods: {
                getListData() {
                    let self = this;
                    axios('/api/SpecialGradeApi/GetListData').then((response) => {
                        console.log(response);
                        self.specialGradeListData = response.data
                    }).then((error) => console.log(error));
                },
            },
            mounted() {
                this.getListData();
            },
        }).mount('#app');
    </script>

}