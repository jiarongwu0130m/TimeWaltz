@{
    ViewData["Title"] = "編輯班別設定";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <form asp-action="ShiftScheduleEdit" asp-asp-controller="BasicSetting" method="post">
                <div class="card-body">
                    <div class="form-group">
                        <label name="ShiftName" class="control-label">班別名稱</label>
                        <input name="ShiftName" class="form-control col-3" v-model="shiftsName" />
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label name="StartTime" class="control-label">開始時間</label>
                        <input name="StartTime" id="dateInput" value="" class="form-control col-3" v-model="startTime" />
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label name="EndTime" class="control-label">結束時間</label>
                        <input name="EndTime" id="dateInput2" value="" class="form-control col-3" v-model="endTime" />
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label name="MaxAdditionalClockIn" class="control-label">補卡上限次數</label>
                        <input name="MaxAdditionalClockIn" type="number" class="form-control col-3" v-model="maxAdditionalClockIn" />
                        <span class="text-danger"></span>
                    </div>
                </div>
                    <div class="card-footer">
                        <input type="button" value="送出" @@click="send" class="btn btn-primary" />
                        <a asp-controller="BasicSetting" asp-action="ShiftSchedule" class="btn btn-outline-dark">返回</a>
                    </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#dateInput').daterangepicker({
                singleDatePicker: true,
                timePicker: true,
                locale: {
                    format: 'YYYY/MM/DD hh:mm A'
                }
            });
        });
        $(function () {
            $('#dateInput2').daterangepicker({
                singleDatePicker: true,
                timePicker: true,
                locale: {
                    format: 'YYYY/MM/DD hh:mm A'
                }
            });
        });
        Vue.createApp({
            data() {
                return {
                    shiftsName: '',
                    startTime: '',
                    endTime: '',
                    maxAdditionalClockIn: '',
                }
            },
            methods: {
                getEditData() {
                    let self = this;
                    axios(`/api/PublicHolidayApi/GetEditData/${self.id}`).then((response) => {
                        console.log(response);
                        self.shiftsName = response.data.shiftsName
                        self.startTime = response.data.startTime
                        self.endTime = response.data.endTime
                        self.maxAdditionalClockIn = response.data.maxAdditionalClockIn
                    }).then((error) => console.log(error));
                },
                send() {
                    let self = this;
                    axios.post(`/api/PublicHolidayApi/Edit/${self.id}`, {
                        id: self.id,
                        holidayName: self.holidayName,
                        date: self.date,
                    })
                        .then((response) => {
                            if (response.status) {
                                Swal.fire({
                                    icon: "success",
                                    title: "修改成功!",
                                    confirmButtonText: '返回',
                                    showClass: {
                                        popup: `animate__animated animate__fadeInUp animate__faster`
                                    },
                                    hideClass: {
                                        popup: `animate__animated animate__fadeOutDown animate__faster`
                                    }
                                }).then((result) => {
                                    if (result.value) {
                                        location.href = "/basicsetting/publicholiday";
                                    }
                                });
                            } else {
                                Swal.fire({
                                    icon: "error",
                                    title: "修改失敗!",
                                    confirmButtonText: '返回',
                                    showClass: {
                                        popup: `animate__animated animate__fadeInUp animate__faster`
                                    },
                                    hideClass: {
                                        popup: `animate__animated animate__fadeOutDown animate__faster`
                                    }
                                });
                            }
                        })
                        .then((error) => console.log(error));
                },
            },
            mounted() {
                this.getEditData();
            },
        }).mount('#app');
    </script>
}