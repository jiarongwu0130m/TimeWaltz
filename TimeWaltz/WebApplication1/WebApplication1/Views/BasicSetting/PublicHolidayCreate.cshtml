@{
    ViewData["Title"] = "新增國定假日";
}

<form asp-action="PublicHolidayCreate" asp-asp-controller="BasicSetting" method="post">
    <section class="content">
        <div class="card-body">
            <div class="form-group">
                <label name="HolidayName" class="control-label"></label>
                <input name="HolidayName" class="form-control" v-model="holidayName"/>
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label name="Date" class="control-label"></label>
                <input id="dateInput" name="Date" class="form-control"/>
                <span class="text-danger"></span>
            </div>                  


            <div class="card-footer">
                <div class="row float-right">
                    <div class="col ">
                        <input type="button" @@click="send" value="送出" class="btn btn-primary"/>
                        <a asp-controller="BasicSetting" asp-action="PublicHoliday" class="btn btn-outline-success">返回</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>

@section Scripts {


    <script>
        Vue.createApp({
            data() {
                return {
                    holidayName: '',
                    date: null,
                }
            },
            methods: {
                send() {
                    let self = this;
                    axios.post('/api/publicholidayapi/create', {
                        holidayName: self.holidayName,
                        date: self.date,
                    })
                    .then((response) => console.log(response))
                    .then((error) => console.log(error));
                },
                getDateRangePicker(){
                    let self = this;
                    $('#dateInput').daterangepicker({
                        singleDatePicker: true,
                        locale: {
                            format: 'YYYY/MM/DD'
                        }
                    }, function (start, _, _) { 
                        self.date = start;
                    };
                }
            },
            mounted() {
                this.getDateRangePicker();
            },
        }).mount('#app');
    </script>

}