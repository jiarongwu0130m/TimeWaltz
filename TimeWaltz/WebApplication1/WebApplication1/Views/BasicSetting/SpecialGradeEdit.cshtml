@model WebApplication1.Models.BasicSettingViewModels.SpecialGradeEditViewModel
@{
    ViewData["Title"] = "編輯年資級距表";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <form asp-action="GradeTableEdit" asp-asp-controller="BasicSetting" method="post">
                <section class="content">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="ServiceLength" class="control-label"></label>
                            <input type="number" class="form-control col-3" value="@Model.ServiceLength" />
                            <span asp-validation-for="ServiceLength" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Days" class="control-label"></label>
                            <input name="Days" type="number" class="form-control col-3" value="@Model.Days" />
                            <span asp-validation-for="Days" class="text-danger"></span>
                        </div>
                        <div class="card-footer">
                            <div class="row">
                                <div class="col ">
                                    <input type="submit" value="送出" class="btn btn-primary" />
                                    <a asp-controller="BasicSetting" asp-action="SpecialGrade" class="btn btn-outline-success">返回</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </form>
        </div>
    </div>
</div>

