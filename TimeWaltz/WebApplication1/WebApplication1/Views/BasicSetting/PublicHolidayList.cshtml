@model IEnumerable<WebApplication1.Models.ViewModel.PublicHolidayViewModel>

@{
    Layout = "_Layout";
    ViewData["Title"] = "國定假日一覽";
}
<div class="row">

    <div class="form-inline mb-3">
        <div class="form-group">
            <label>國定假日名稱查詢：</label>
            <form asp-action="ListPublicHoliday" asp-controller="BasicSetting" method="post">
                <div class="input-group col">
                    <div class="input-group-prepend">                        
                    </div>
                    <input name="QueryHolidayName" type="text">
                    <button type="submit" class="btn btn-outline-dark">查詢</button>
                </div>
            </form>
        </div>
        <div class="form-group">
            <a asp-controller="BasicSetting" asp-action="PublicHolidayCreate" class="btn btn-outline-success">新增</a>

        </div>
    </div>

    <table class="table table-bordered">
        <thead>
        <thead>
            <tr>
                <th>
                        @Html.DisplayNameFor(model => model.HolidayName)
                </th>
                <th>
                        @Html.DisplayNameFor(model => model.Date)
                </th>
                <th></th>
            </tr>
        </thead>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.HolidayName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.ActionLink("詳細", "PublicHolidayEdit", new { id = item.Id }) |
                        @Html.ActionLink("刪除", "PublicHolidayDelete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>