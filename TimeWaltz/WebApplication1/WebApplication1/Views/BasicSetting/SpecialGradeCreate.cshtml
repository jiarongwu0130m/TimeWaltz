@model WebApplication1.Models.BasicSettingViewModels.SpecialGradeCreateViewModel
@{
    ViewData["Title"] = "新增級距";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <form asp-action="SpecialGradeCreate" asp-asp-controller="BasicSetting" method="post">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ServiceLength" class="control-label"></label>
                        <input name="ServiceLength" class="form-control col-3" />
                        <span asp-validation-for="ServiceLength" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Days" class="control-label"></label>
                        <input name="Days" class="form-control col-3" />
                        <span asp-validation-for="Days" class="text-danger"></span>
                    </div>
                    <div class="card-footer">
                        <input type="submit" value="新增" class="btn btn-primary" />
                        <a asp-controller="BasicSetting" asp-action="SpecialGrade" class="btn btn-outline-dark">返回</a>

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


