@model WebApplication1.Models.PublicHolidayViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "修改國定假別";
}
<form asp-action="EditPublicHoliday" asp-controller="BasicSetting" method="post">
    <section class="content">
        <div class="card-body">
            <input asp-for="Id" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HolidayName" class="control-label"></label>
                <input asp-for="HolidayName" class="form-control" />
                <span asp-validation-for="HolidayName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>


            <div class="card-footer">
                <div class="row float-right">
                    <div class="col ">
                        <input type="submit" value="送出" class="btn btn-primary" />
                        <a asp-action="ListPublicHoliday" asp-controller="BasicSetting" class="btn btn-primary">返回</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>