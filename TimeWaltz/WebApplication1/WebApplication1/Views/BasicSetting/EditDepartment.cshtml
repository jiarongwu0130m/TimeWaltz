@{
    Layout = "_Layout";
    ViewBag.title = "部門修改";
}
@model DepartmentEditViewModel

<form asp-controller="BasicSetting" asp-action="EditVacationType" method="post">
    <section class="content">
        <div class="card-body">
            <input asp-for="Id" type="hidden" />

            <div class="card-body">
                <div class="form-group">
                    <label asp-for="DepartmentName" class="control-label">部門名稱</label>
                    <input asp-for="DepartmentName" class="form-control col-sm-3" />
                </div>
                <div class="form-group">
                    <label class="control-label">部門主管</label>
                    <select class="form-control  col-sm-3"></select>
                    <input asp-for="EmployeesId" type="hidden" value="1" />

                </div>
                <div class="form-group">
                    <label class="control-label">直屬部門</label>
                    <select class="form-control  col-sm-3"></select>
                </div>
            </div>


            <div class="card-footer">
                <div class="row float-right">
                    <div class="col ">
                        <input type="submit" value="送出" class="btn btn-primary" />
                        <a asp-controller="BasicSetting" asp-action="ListDepartment" class="btn btn-outline-dark">返回</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>
