@model WebApplication1.Models.VacationTypeViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "修改假別";
}
<form asp-action="EditVacationType" asp-controller="BasicSetting" method="post">
    <section class="content">
        <div class="card-body">
            <input asp-for="Id" type="hidden"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VacationType" class="control-label">假別名稱</label>
                <input asp-for="VacationType" class="form-control" />
                <span asp-validation-for="VacationType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label">可請性別</label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cycle" class="control-label">可請周期</label>
                <select asp-for="Cycle" class="form-control" asp-items="@Model.CycleSelectItems"></select>
                <span asp-validation-for="Cycle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfDays" class="control-label">可請天數</label>
                <input asp-for="NumberOfDays" class="form-control" />
                <span asp-validation-for="NumberOfDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinVacationHours" class="control-label">最小可請時數</label>
                <input asp-for="MinVacationHours" class="form-control" />
                <span asp-validation-for="MinVacationHours" class="text-danger"></span>
            </div>
            <div class="form-group">
            </div>


            <div class="card-footer">
                <div class="row float-right">
                    <div class="col ">
                        <a asp-action="ListVacationType" asp-controller="BasicSetting" class="btn btn-primary">返回</a>
                        <input type="submit" value="送出" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>

