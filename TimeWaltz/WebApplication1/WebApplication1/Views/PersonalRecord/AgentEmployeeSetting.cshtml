@model WebApplication1.Models.AgentEmploeeViewModel

@{
    ViewData["Title"] = "編輯";
}

<form asp-action="EditPersonalData" asp-asp-controller="BasicSetting" method="post" id="app">
    <section class="content">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AgentEmployeeName" class="control-label"></label>
                <select class="form-control" asp-for="AgentEmployeesId">
                    <option v-for="item in agentEmployeeSelectItems" value="item.value">{{item.text}}</option>
                </select>
                <span class="text-danger"></span>
            </div>  
            <div class="form-group">
                <label asp-for="AgentEmployeeName" class="control-label"></label>
                <select class="form-control" asp-for="AgentEmployeesId">
                    <option v-for="item in agentEmployeeSelectItems" value="item.value">{{item.text}}</option>
                </select>
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AgentEmployeeName" class="control-label"></label>
                <select class="form-control" asp-for="AgentEmployeesId">
                    <option v-for="item in agentEmployeeSelectItems" value="item.value">{{item.text}}</option>
                </select>
                <span class="text-danger"></span>
            </div>
            <div class="card-footer">
                <div class="row float-right">
                    <div class="col ">
                        <input type="submit" value="送出" class="btn btn-primary" />
                        <a asp-controller="BasicSetting" asp-action="ListPersonalData" class="btn btn-outline-success">返回</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>

@section Scripts{

    <script>

        Vue.createApp({
            data() {
                return {
                    agentEmployeeSelectItems: []
                }
            },
            mounted() {
                fetch("/api/AgentEmployeeApi/DropDownList").then(res => res.json())
                    .then(result => {
                        this.agentEmployeeSelectItems = result.agentEmployeeSelectItems;
                    })
            }
        }).mount("#app");
    </script>



}